<div class="page-header">
  <h3>Like #<%= @likes.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">

      <dt>Photo</dt>
      <dd><%= @likes.photo.try(:image) %></dd>
    </dl>

<dl class="dl-horizontal">
    <dt> Caption </dt>
    <dd> <%= @likes.photo.caption %></dd>

</dl>

    <div class="btn-group btn-group-justified">
      <a href="/likes" class="btn btn-primary">
        Back
      </a>
      <a href="/likes/<%= @likes.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_like/<%= @likes.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
